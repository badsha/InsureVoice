{
  "expo": {
    "name": "IDRA Grievance Management",
    "slug": "idra-grievance-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563eb"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "bd.gov.idra.grievance",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to capture documents for grievance submissions.",
        "NSPhotoLibraryUsageDescription": "This app accesses photos to attach evidence to grievance reports.",
        "NSContactsUsageDescription": "This app may access contacts for customer support purposes."
      },
      "associatedDomains": [
        "applinks:idra.gov.bd"
      ],
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2563eb"
      },
      "package": "bd.gov.idra.grievance",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "https",
              "host": "idra.gov.bd"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "bd.gov.idra.grievance"
      }
    },
    "owner": "idra-bangladesh",
    "privacy": "public",
    "description": "Official mobile app of the Insurance Development and Regulatory Authority (IDRA) of Bangladesh for managing insurance-related grievances and complaints.",
    "githubUrl": "https://github.com/idra-bangladesh/grievance-app"
  }
}
